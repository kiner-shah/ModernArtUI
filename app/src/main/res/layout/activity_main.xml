<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.modernartui.MainActivity">
    <Button
        android:layout_width="120dp"
        android:layout_height="250dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:id="@+id/one"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="0dip"
        android:background="@drawable/my_button1"
        android:padding="-8dp"/>
    <Button
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:layout_toRightOf="@+id/one"
        android:id="@+id/two"
        android:layout_marginTop="0dip"
        android:layout_marginRight="0dip"
        android:background="@drawable/my_button2"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="250dp"
        android:layout_below="@id/one"
        android:id="@+id/three"
        android:layout_marginLeft="0dip"
        android:background="@drawable/my_button3"/>
    <Button
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:layout_below="@id/two"
        android:layout_toRightOf="@id/one"
        android:id="@+id/four"
        android:layout_marginRight="0dip"
        android:background="@drawable/my_button4"/>
    <Button
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_below="@id/four"
        android:layout_toEndOf="@id/one"
        android:layout_marginEnd="0dip"
        android:background="@drawable/my_button5"
        android:visibility="visible"
        android:id="@+id/five" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:max="10"
        android:progressTint="#58f9e7"
        android:secondaryProgressTint="#4089e7"
        android:indeterminate="false"
        android:id="@+id/seek"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
